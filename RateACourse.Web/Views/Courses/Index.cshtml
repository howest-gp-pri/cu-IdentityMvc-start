@model CoursesIndexViewModel

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Courses
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var course in Model.Courses) 
    {
            <tr>
                <td>
                    @course.Name
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@course.Id">Details</a> |
                    <a asp-action="ConfirmDelete" asp-route-id="@course.Id">Delete</a>
                </td>
            </tr>
    }
    </tbody>
</table>
